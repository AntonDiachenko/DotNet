<Window x:Class="Day02WPFHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Day02WPFHelloWorld"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="MainWindow" Height="180" Width="327">
    <Grid>
        <Label Content="What's your name?" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top" Width="119" Height="27"/>
        <TextBox Name="TbxName" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="183,15,0,0" Width="119"/>
        <Button Content="Say Hello (label)" HorizontalAlignment="Left" Margin="25,0,0,0" VerticalAlignment="Center" Width="119" Click="btnSayHelloLabel_Click"/>
        <Button Content="Say Hello (msg box)" HorizontalAlignment="Left" Margin="183,0,0,0" VerticalAlignment="Center" Width="119" Click="btnSayHelloPopup_Click"/>
        <Label Name="LblGreeting"  Content="..." HorizontalAlignment="Center" Margin="0,108,0,0" VerticalAlignment="Top" Width="277"/>
    </Grid>
</Window>
